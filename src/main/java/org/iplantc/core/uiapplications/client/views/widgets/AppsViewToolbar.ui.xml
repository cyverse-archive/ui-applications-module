<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
             xmlns:MyWidgets="urn:import:org.iplantc.core.uiapplications.client.views.widgets">
             
   <ui:with type="org.iplantc.core.uiapplications.client.images.Icons" field="icons"/>
   
   <container:SimpleContainer>
     <toolbar:ToolBar ui:field="toolBar">
       <button:TextButton text="Create"
                          icon="{icons.add}">
         <button:menu>
            <menu:Menu>
               <menu:MenuItem ui:field="createNewApp"
                              text="New App"
                              icon="{icons.add}"/>
               <menu:MenuItem ui:field="createWorkflow"
                              text="Workflow"
                              icon="{icons.add}"/>
            </menu:Menu>
         </button:menu>
       </button:TextButton>
       <toolbar:FillToolItem/>
       <button:TextButton ui:field="appInfo"
                          text="App Info"
                          icon="{icons.info}"/>
       <toolbar:FillToolItem/>
       <button:TextButton ui:field="requestTool"
                          text="Request Tool"
                          icon="{icons.requestTool}"/>
       <toolbar:FillToolItem/>
       <button:TextButton ui:field="copy"
                          text="Copy"
                          icon="{icons.copy}"/>
       <toolbar:FillToolItem/>
       <button:TextButton ui:field="edit"
                          text="Edit"
                          icon="{icons.edit}"/>
       <toolbar:FillToolItem/>
       <button:TextButton ui:field="delete"
                          text="Delete"
                          icon="{icons.delete}"/>
       <toolbar:FillToolItem/>
       <button:TextButton ui:field="submit"
                          text="Submit"
                          icon="{icons.submitForPublic}"/>
       <MyWidgets:AppSearchField3 ui:field="appSearch"/>
     </toolbar:ToolBar>
   </container:SimpleContainer>
</ui:UiBinder> 