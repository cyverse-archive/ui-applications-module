<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:c="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:tree="urn:import:com.sencha.gxt.widget.core.client.tree"
	xmlns:gwt="urn:import:com.google.gwt.widget.client" xmlns:t="urn:import:com.google.gwt.i18n.server.testing">

	<ui:with field="strings"
		type="org.iplantc.core.resources.client.messages.IplantDisplayStrings" />

	<ui:with field="layoutData"
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
		<ui:attributes height="-1" width=".90" />
	</ui:with>
	<ui:style>
		
	</ui:style>
	<ui:with field="treeStore"
            type="com.sencha.gxt.data.shared.TreeStore" />
	<con:VerticalLayoutContainer ui:field="container">
		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="App Name" labelAlign="TOP" toolTip="Click app name to edit">
				<form:widget>
					<form:TextField debugId="idTxtAppName" name="name"
						ui:field="appName" allowBlank="false" toolTip="Click app name to edit">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>
		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="Description" labelAlign="TOP" toolTip="Click app description to edit">
				<form:widget>
					<form:TextField debugId="idTxtAppDesc" name="desc"
						ui:field="appDesc" allowBlank="false" toolTip="Click app description to edit">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>
		<con:child layoutData="{layoutData}">
			  <tree:Tree ui:field="tree"
                             autoExpand="true"/>
		</con:child>

	</con:VerticalLayoutContainer>
</ui:UiBinder> 