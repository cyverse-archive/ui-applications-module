<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui" 
		xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
		xmlns:c="urn:import:com.sencha.gxt.widget.core.client.button"
		xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
		xmlns:gwt="urn:import:com.google.gwt.widget.client" 
		xmlns:t="urn:import:com.google.gwt.i18n.server.testing"
		xmlns:ipc="urn:import:org.iplantc.core.uiapps.client.views">

	<ui:with field="strings"
		type="org.iplantc.core.resources.client.messages.IplantDisplayStrings" />

    <ui:with
        field="constants"
        type="org.iplantc.core.uicommons.client.DEClientConstants" />

	<ui:with field="layoutData"
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
		<ui:attributes height="-1" width=".90" />
	</ui:with>

	<con:VerticalLayoutContainer ui:field="container" width="420">
		<form:FieldSet headingText="{strings.toolTab}" collapsible="true">
			<con:VerticalLayoutContainer>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="toolNameLbl" labelSeparator="" labelAlign="TOP">
						<form:widget>
							<form:TextField debugId="idTxtToolName" ui:field="toolName" 
									allowBlank="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="toolDescLbl" labelAlign="TOP">
						<form:widget>
							<form:TextArea debugId="idTxtToolDesc" ui:field="toolDesc" 
									allowBlank="false" height="150"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel text="{strings.toolAttributionLabel}" labelAlign="TOP" >
						<form:widget>
							<form:TextArea debugId="idTxtAttrib" ui:field="toolAttrib" 
									allowBlank="true" height="150"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="srcLbl" labelAlign="TOP" >
						<form:widget>
							<g:HorizontalPanel spacing="3">
								<form:Radio debugId="idRdoTooLink" ui:field="toolLink" 
										name="binRadioGroup" boxLabel="Link" value="false"/>
								<form:Radio debugId="idRdoToolUpld" ui:field="toolUpld" 
										name="binRadioGroup" boxLabel="Upload" value="true"/>
							</g:HorizontalPanel>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<ipc:UploadForm ui:field="binUpld" allowBlank="false" visible="true" 
							enabled="true"/>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel text="" labelSeparator="" labelAlign="TOP">
						<form:widget>
							<form:TextField debugId="idTxtToolUrl" ui:field="binLink" 
									allowBlank="false" visible="false" enabled="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="docUrlLbl" labelAlign="TOP" labelSeparator="">
						<form:widget>
							<form:TextField debugId="idTxToolDocUrl" ui:field="toolDoc" 
									allowBlank="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="versionLbl" labelAlign="TOP" labelSeparator="">
						<form:widget>
							<form:TextField debugId="idTxtVersion" ui:field="toolVersion" 
									allowBlank="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="archLbl" labelAlign="TOP" labelSeparator="">
						<form:widget>
							<form:ComboBox debugId="idCboArch" ui:field="archCbo" allowBlank="true" 
									forceSelection="true" triggerAction="ALL" editable="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="multiLbl" labelAlign="TOP" labelSeparator="">
						<form:widget>
							<form:ComboBox debugId="idCboMultiThreaded" ui:field="multiThreadCbo" 
							 		allowBlank="true" forceSelection="true" triggerAction="ALL" 
							 		editable="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
			</con:VerticalLayoutContainer>
		</form:FieldSet>
		<form:FieldSet headingText="{strings.otherTab}" collapsible="true">
			<con:VerticalLayoutContainer>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="upldTestLbl" labelAlign="TOP">
						<form:widget>
							<ipc:UploadForm ui:field="testDataUpld" allowBlank="false"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel ui:field="cmdLineLbl" labelAlign="TOP">
						<form:widget>
							<form:TextArea debugId="idTxtCmdLine" ui:field="runInfo" 
									allowBlank="false" height="150"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel text="{strings.otherData}" labelAlign="TOP">
						<form:widget>
							<ipc:UploadForm ui:field="otherDataUpld"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
				<con:child layoutData="{layoutData}">
					<form:FieldLabel text="{strings.otherInfo}" labelAlign="TOP">
						<form:widget>
							<form:TextArea debugId="idTxtAddnlInfo" ui:field="otherInfo" 
									allowBlank="true" height="150"/>
						</form:widget>
					</form:FieldLabel>
				</con:child>
			</con:VerticalLayoutContainer>
		</form:FieldSet>
	</con:VerticalLayoutContainer>
</ui:UiBinder>